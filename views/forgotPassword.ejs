<body style="background-color: black;">

    <%- include('header'); -%>


    <div class="bg-pic">
    <div class="container register mb-5">
        <div class="row">

            <div class="col-md-8 register-left">

                <!-- <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"> -->
                <h3 class="register-heading"> Reset Password</h3>
                <form type="submit" action="/Create" method="POST">
                    <div class="row register-form">
                        <div class="col-md-12">

                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Enter Your Email*" value=""
                                    name="name" required />
                            </div>

                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Enter Your Phone Number" value=""
                                    name="p.no" min="10" required />
                            </div>


                            <div class="form-group">
                                <input type="password" minlength="4" maxlength="10" name="password" class="form-control"
                                    placeholder="Enter Password" value="" id=" password" required />
                            </div>




                            <div>
                                <div>
                                <button type="submit" class="btnRegister" id="btn">Login</button>
        <!-- <br> --></div>
                                    <div>
                                <button onclick="window.location.href = '/register'" class="btnRegister" id="btn">
                                    Go to register
                                </button>
                            </div>
                            </div>
                        </div>

                    </div>
                </form>
                <div class="forgot-content">
                    <img src="images/logo1.jpg" width="450px" height="300px" style="margin-left: 200px;">
                </div>
                <!-- </div>

                </div> -->
            </div>
            
                <!-- <div class="text-center quotes">

                </div> -->
                <div  class="col-md-4 register container-2">
                    <img src="images/signup1.jpg" class="icon-2" alt="image" />
                    <div class="centered">
                        <div>Forgot Password?</div>
                        <div>We got you!</div>
                   
                </div>

            </div>
        </div>

    </div>
</div>
